@{
    Page.MainTitle = "GanSoft-App";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Manual @Page.MainTitle - @Page.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    <!-- Styles -->
    <link href="~/components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/components/jasny-bootstrap/dist/css/jasny-bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/components/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/styles/gansoft.css" rel="stylesheet" type="text/css" /> @*TODO: Construir el .min*@
    <link href="~/styles/site.css" rel="stylesheet" type="text/css" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">

    @RenderSection("Styles", required: false)

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->


</head>
<body>

    <div class="navmenu navmenu-inverse navmenu-fixed-left offcanvas-xs" role="navigation">
        <a class="navmenu-brand" href="https://play.google.com/store/apps/details?id=com.softsupply.gansoft&hl=es" target="_blank">@Page.MainTitle</a>
        <ul class="nav navmenu-nav">
            <li><a href="~/">Bienvenido</a></li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user" aria-hidden="true"></i> Perfil <b class="caret pull-right"></b></a>
                <ul class="dropdown-menu navmenu-nav" role="menu">
                    <li><a href="~/content/profile/signin"><i class="fa fa-play" aria-hidden="true"></i>   Iniciar sesión</a></li>
                    <li><a href="~/content/profile/signup"><i class="fa fa-registered" aria-hidden="true"></i>  Registro</a></li>
                    @*<li class="divider"></li>*@
                    <li><a href="~/content/profile"><i class="fa fa-info" aria-hidden="true"></i>  Información</a></li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="gs gs-farm" aria-hidden="true"></i>  Hacienda <b class="caret pull-right"></b></a>
                <ul class="dropdown-menu navmenu-nav" role="menu">
                    <li><a href="~/content/estate/dategeneral"><i class="gs gs-general-data" aria-hidden="true"></i>  Datos generales</a></li>
                    <li><a href="~/content/estate/terminologi"><i class="gs gs-terms" aria-hidden="true"></i>  Terminología</a></li>
                    <li><a href="~/content/estate/parametros"><i class="gs gs-params" aria-hidden="true"></i>  Parámetros</a></li>
                    <li><a href="~/content/estate/automations"><i class="gs gs-auto" aria-hidden="true"></i>  Automatizaciones</a></li>
                    <li><a href="~/content/estate/cambio"><i class="gs gs-farm" aria-hidden="true"></i>  Cambio de hacienda</a></li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="gs gs-codi" aria-hidden="true"></i>  Códigos <b class="caret pull-right"></b></a>
                <ul class="dropdown-menu navmenu-nav" role="menu">
                    <li><a href="~/content/code/lista"><i class="gs gs-general-data" aria-hidden="true"></i>  Listado</a></li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="gs gs-animal" aria-hidden="true"></i>  Animales <b class="caret pull-right"></b></a>
                <ul class="dropdown-menu navmenu-nav" role="menu">
                    <li><a href="~/content/animals/animallist"><i class="gs gs-general-data" aria-hidden="true"></i>  Lista de Búsqueda</a></li>
                </ul>
            </li>
            <li><a href="~/content/event/evento.cshtml"><i class="gs gs-event" aria-hidden="true"></i>  Evento</a></li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="gs gs-option" aria-hidden="true"></i>  Opciones <b class="caret pull-right"></b></a>
                <ul class="dropdown-menu navmenu-nav" role="menu">
                    <li><a href="~/content/option/opcion"><i class="fa fa-refresh" aria-hidden="true"></i>  Sincronización</a></li>
                </ul>
            </li>

        </ul>
    </div>
    <div class="navbar navbar-inverse navbar-fixed-top visible-xs">
        <button type="button" class="navbar-toggle" data-toggle="offcanvas" data-target=".navmenu">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">@Page.MainTitle</a>
    </div>

    <header>
        <img class="arriba" src="~/images/captures/logoapp.png" alt="Logo app"/>
        <div class="jumbotron">
            <div class="container">
                <h1 class="text-center">@Page.Title</h1>
            </div>
        </div>
        
</header>

    <div id="body" class="container-fluid">
        @RenderBody()
    </div>

    <footer></footer>

    <!-- Scripts -->
    <script src="~/components/jquery/dist/jquery.min.js"></script>
    <script src="~/components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/components/jasny-bootstrap/dist/js/jasny-bootstrap.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>